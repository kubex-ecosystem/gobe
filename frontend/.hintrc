{
  "extends": [
    "development"
  ],
  "hints": {
    "apply": "none",
    "no-inline-styles": "off",
    "tailwindcss/no-custom-classname": "off",
    "axe/aria": [
      "default",
      {
        "aria-valid-attr-value": "off"
      }
    ],
    "rules": {
      "apply": "none",
      "at-rule-no-unknown": [
        true,
        {
          "ignoreAtRules": [
            "apply",
            "tailwind",
            "layer",
            "variants",
            "responsive",
            "screen",
            "tailwind",
            "layer",
            "variants",
            "responsive",
            "screen"
          ]
        }
      ]
    }
  }
}
